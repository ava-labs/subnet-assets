{
  "$id": "/schemas/SubnetInfoSchema.json",
  "description": "Schema for subnet infomation",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "subnetId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9]+$"
    },
    "subnetName": {
      "type": "string",
      "maxLength": 32
    },
    "isTestnet": {
      "type": "boolean"
    },
    "description": {
      "type": "string"
    },
    "officialSite": {
      "type": "string",
      "format": "uri"
    },
    "resourceLinks": {
      "type": "array",
      "items": {
        "$ref": "/schemas/resourceLinkSchema.json"
      }
    }
  },
  "required": ["subnetId", "subnetName", "isTestnet"]
}

