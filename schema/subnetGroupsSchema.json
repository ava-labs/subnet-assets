{
  "$id": "/schemas/SubnetGroups.Schema.json",
  "description": "Schema for the subnet groups file",
  "additionalProperties": false,
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "subnetGroupName": {
        "type": "string",
        "maxLength": 32
      },
      "subnetExplorerUriId": {
        "type": "string"
      },
      "mainnetSubnetId": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9]+$"
      },
      "testnetSubnetId": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9]+$"
      },
      "chainGroups": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "mainnet": {
              "type": "integer",
              "minimum": 1
            },
            "testnet": {
              "type": "integer",
              "minimum": 1
            }
          }
        }
      }
    },
    "required": ["subnetGroupName"]
  }
}
